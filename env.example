# =============================================================================
# INCLUSIVEAI COACH - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Configuration (Recomendado para producción)
DATABASE_URL="postgresql://username:password@localhost:5432/inclusive_ai_coach"
DIRECT_URL="postgresql://inclusive:inclusive123@localhost:5432/inclusive_ai"

# SQLite for development (legacy - usar solo para desarrollo local)
# DATABASE_URL="file:./dev.db"

# Configuración de Pool de Conexiones
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_TIMEOUT=30000

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESS=true
BACKUP_S3_BUCKET=""
BACKUP_S3_REGION="us-east-1"

# =============================================================================
# AUTHENTICATION (NEXTAUTH.JS)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Your application URL
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# SOCIAL AUTHENTICATION PROVIDERS
# =============================================================================
# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# Facebook OAuth (Optional)
FACEBOOK_CLIENT_ID="your-facebook-client-id-here"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret-here"

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY="your-anthropic-api-key"

# OpenAI API (Alternative/Backup)
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-encryption-key"
JWT_SECRET="your-jwt-secret"
SESSION_SECRET="your-session-secret-here"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID="your-google-analytics-id-here"

# Monitoring Configuration
ENABLE_MONITORING="true"
LOG_LEVEL="info"

# =============================================================================
# ALERTING & NOTIFICATIONS
# =============================================================================
# Email Alerts (Optional)
ALERT_EMAIL="alerts@yourdomain.com"

# Slack Integration (Optional)
SLACK_WEBHOOK_URL="your-slack-webhook-url-here"

# Discord Integration (Optional)
DISCORD_WEBHOOK_URL="your-discord-webhook-url-here"

# =============================================================================
# PERFORMANCE & DEVELOPMENT
# =============================================================================
# Bundle Analysis (Set to "true" for development)
ANALYZE="false"
BUNDLE_ANALYZE="false"

# Node Environment
NODE_ENV="development"

# =============================================================================
# DOCKER & PRODUCTION (Optional)
# =============================================================================
# Redis Configuration (if using Redis)
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD="your-redis-password-here"

# Grafana (if using monitoring stack)
# GRAFANA_PASSWORD="your-grafana-password-here"

# SSH Deployment (if using automated deployment)
# HOST="your-server-ip"
# USERNAME="your-ssh-user"
# SSH_KEY="your-ssh-private-key"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_OFFLINE_MODE="true"
ENABLE_VOICE_RECOGNITION="true"
ENABLE_NEEDS_DETECTION="true"
ENABLE_ADAPTIVE_LEARNING="true"

# =============================================================================
# LOCALIZATION
# =============================================================================
# Default language and region
DEFAULT_LANGUAGE="es-MX"
DEFAULT_REGION="MX"

# =============================================================================
# API RATE LIMITING
# =============================================================================
# Rate limiting configuration
MAX_REQUESTS_PER_MINUTE="60"
MAX_REQUESTS_PER_HOUR="1000"

# =============================================================================
# FILE UPLOADS (if implementing file upload features)
# =============================================================================
# Maximum file size (in bytes)
MAX_FILE_SIZE="10485760" # 10MB

# Allowed file types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# =============================================================================
# PERFORMANCE OPTIMIZATIONS
# =============================================================================

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Redis Configuration for distributed caching
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Redis TTL Configuration (in seconds)
REDIS_TTL_SESSION="1800"      # 30 minutes
REDIS_TTL_USER="900"          # 15 minutes
REDIS_TTL_AI_MODEL="3600"     # 1 hour
REDIS_TTL_CONTENT="86400"     # 24 hours
REDIS_TTL_IMAGE="604800"      # 7 days
REDIS_TTL_API="300"           # 5 minutes
REDIS_TTL_STATIC="3600"       # 1 hour

# =============================================================================
# CDN CONFIGURATION
# =============================================================================
# CDN Provider (cloudflare, aws-cloudfront, vercel, custom)
CDN_PROVIDER="cloudflare"
CDN_BASE_URL="https://cdn.inclusiveai.com"
CDN_API_KEY="your-cdn-api-key"
CDN_ZONE_ID="your-zone-id"
CDN_REGION="us-east-1"

# =============================================================================
# IMAGE OPTIMIZATION
# =============================================================================
# Image optimization settings
IMAGE_OPTIMIZATION_ENABLED="true"
IMAGE_QUALITY="85"
IMAGE_FORMAT="webp"
IMAGE_CACHE_TTL="86400000"    # 24 hours in milliseconds
IMAGE_CONCURRENCY_LIMIT="4"

# =============================================================================
# LAZY LOADING
# =============================================================================
# Lazy loading configuration
LAZY_LOADING_ENABLED="true"
LAZY_LOADING_THRESHOLD="0.1"
LAZY_LOADING_ROOT_MARGIN="50px"
LAZY_LOADING_RETRY_COUNT="3"
LAZY_LOADING_RETRY_DELAY="1000"

# =============================================================================
# COMPRESSION
# =============================================================================
# Compression settings
COMPRESSION_ENABLED="true"
COMPRESSION_LEVEL="6"
COMPRESSION_THRESHOLD="1024"  # 1KB

# =============================================================================
# CACHE CONFIGURATION (Legacy)
# =============================================================================
# Cache TTL (Time To Live) in seconds
CACHE_TTL="3600" # 1 hour

# =============================================================================
# TESTING
# =============================================================================
# Test-specific environment variables
TEST_DATABASE_URL="file:./test.db"
TEST_ANTHROPIC_API_KEY="test-key"
TEST_OPENAI_API_KEY="test-key"

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Generate secure secrets using: openssl rand -base64 32
# 3. Use different secrets for development, staging, and production
# 4. Regularly rotate your API keys and secrets
# 5. Use environment-specific .env files (.env.local, .env.production, etc.)

# Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
PUSH_ENDPOINT="/api/notifications/push"

# Email Notifications
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@inclusiveai.com"

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+1234567890"

# AWS Services (Alternative to Twilio/SendGrid)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_SES_FROM_EMAIL="noreply@inclusiveai.com"

# Monitoring
PROMETHEUS_ENDPOINT="http://localhost:9090"
GRAFANA_URL="http://localhost:3001"

# Security
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-encryption-key"

# Performance
NEXT_PUBLIC_ANALYTICS_ID="your-analytics-id"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# Cultural Adaptation
DEFAULT_LANGUAGE="es-MX"
SUPPORTED_LANGUAGES="es-MX,maya,nahuatl,quechua"

# Offline Support
OFFLINE_CONTENT_PATH="/offline-content"
OFFLINE_DB_SIZE="100MB"

# Testing
JEST_WORKERS="4"
PLAYWRIGHT_BROWSERS="chromium,firefox,webkit"

# Development
NODE_ENV="development"
DEBUG="inclusive-ai:*"
