    "operations": {
      "addition": {
        "title": "Suma Maya",
        "description": "Aprende a sumar usando el sistema numérico maya",
        "examples": [
          {
            "problem": "¿Cuántos granos de maíz hay en total si tienes 3 mazorcas con 20 granos cada una?",
            "solution": "3 × 20 = 60 granos",
            "mayaNumbers": "oxi' × k'al = waqi' bak",
            "explanation": "Tres mazorcas por veinte granos cada una es igual a sesenta granos"
          },
          {
            "problem": "Si tienes 5 cenotes y cada uno tiene 4 peces, ¿cuántos peces hay en total?",
            "solution": "5 × 4 = 20 peces",
            "mayaNumbers": "wo'o' × kaji' = k'al",
            "explanation": "Cinco cenotes por cuatro peces cada uno es igual a veinte peces"
          }
        ]
      },
      "subtraction": {
        "title": "Resta Maya",
        "description": "Aprende a restar usando el sistema numérico maya",
        "examples": [
          {
            "problem": "Si tienes 10 tortillas y comes 3, ¿cuántas te quedan?",
            "solution": "10 - 3 = 7 tortillas",
            "mayaNumbers": "lajuj - oxi' = wuqu'",
            "explanation": "Diez tortillas menos tres es igual a siete tortillas"
          }
        ]
      },
      "multiplication": {
        "title": "Multiplicación Maya",
        "description": "Aprende a multiplicar usando el sistema numérico maya",
        "examples": [
          {
            "problem": "¿Cuántos días hay en 3 semanas?",
            "solution": "3 × 7 = 21 días",
            "mayaNumbers": "oxi' × wuqu' = jun k'al jun",
            "explanation": "Tres semanas por siete días cada una es igual a veintiún días"
          }
        ]
      }
    },
